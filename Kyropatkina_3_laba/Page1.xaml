                <Button Grid.Column="3" Margin="0,4,0,0"  FontSize="8" Background="{x:Null}" BorderBrush="Gray" Foreground="Gray">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="image\image for any button\trash_can_64px.png" Height="10" Width="11"/>
                        <TextBlock Text="Delete" Height="9"/>
                    </StackPanel>
                </Button>




