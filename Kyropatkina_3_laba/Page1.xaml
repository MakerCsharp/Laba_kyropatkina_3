                </TextBlock>

            </Grid>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="2" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="192*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="16*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="13*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
            <!-- Estimadted segment size-->
            <Grid Grid.Row="0" Grid.Column="1">
                <TextBlock Text="Estimated segment size" Foreground="Gray"/>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="34*"/>
                    <ColumnDefinition Width="363*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="10-20%" Foreground="#FF57BF9C" FontSize="8"/>
                <TextBlock Grid.Column="1"  Text="of yout sotail traffic excepted to join based on a sample of hietoncial data" FontSize="8" Foreground="Gray"/>
            </Grid>
            <Grid Grid.Row="4" Grid.Column="1">
                <ProgressBar Value="50" FontSize="8" />
            </Grid>


        </Grid>

        <Grid Grid.Row="2" Background="White" Grid.Column="0" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="603*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="11*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="9*"/>

            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="102*"/>
                    <ColumnDefinition Width="5*"/>
