                <Button Grid.Column="3" Margin="0,3,10,0"  FontSize="8" Background="{x:Null}" BorderBrush="Gray" Foreground="Gray">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="image\image for any button\clock_32px.png" />
                        <TextBlock Text="Time"/>
                    </StackPanel>
                </Button>
            </Grid>



        </Grid>


        <Grid Grid.Row="6" Grid.ColumnSpan="3" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="17*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="14*"/>
